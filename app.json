{
  "expo": {
    "scheme": "acme",
    "userInterfaceStyle": "automatic",
    "orientation": "default",
    "web": {
      "output": "static"
    },
    "icon": "./src/assets/logo.png",
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://n"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Erlaube $(PRODUCT_NAME), deinen Standort zu verwenden, um standortbasierte Benachrichtigungen zu senden.",
          "locationBackgroundPermission": "Erlaube $(PRODUCT_NAME), deinen Standort im Hintergrund zu verwenden, um Benachrichtigungen zu senden."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./src/assets/logo.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000",
          "image": "./src/assets/logo.png",
          "dark": {
            "image": "./src/assets/logo.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ]
    ],
    "name": "GeoReminder",
    "slug": "GeoReminder",
    "ios": {
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch"
        ]
      }
    },
    "android": {
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "package": "com.aaronbyjapps.GeoReminder"
    }
  }
}
